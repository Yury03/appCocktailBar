<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="4dp"
    android:background="@drawable/cocktail_placeholder"
    app:cardCornerRadius="54dp">

    <ImageView
        android:id="@+id/cocktail_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cocktail_placeholder" />

    <TextView
        android:id="@+id/cocktail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:fontFamily="@font/didact_gothic_regular"
        android:gravity="center"
        android:text="@string/placeholder_cocktail_item_name"
        android:textColor="@color/white"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>